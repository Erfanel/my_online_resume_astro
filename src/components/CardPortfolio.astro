---
const { title, technology, year, item1, item2, item3, item4, order, link, background } = Astro.props
---

<div class="flex justify-center py-10 m-10 ">
    <div class={background}>
        <div class="grid lg:grid-cols-2 bg-center max-w-5xl shadow-lg">
            <div class="bg-black bg-opacity-80 p-10 flex flex-col gap-3 text-lg" style={order} >
                <h2 class="font-medium">{title}</h2>
                <a href={link}> {link}</a>
                <p>{technology}</p>
                <p>{year}</p>
                <ul class="flex flex-col gap-3">
                    <li>{item1}</li>
                    <li>{item2}</li>
                    <li>{item3}</li>
                    <li>{item4}</li>
                </ul>
            </div>
            <div>
                <!-- section vide -->
            </div>
        </div>
    </div>

</div>